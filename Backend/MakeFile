.PHONY: run proto run-all

run:
	go run main.go

run-all:
	@echo "Starting backend and webapp servers..."
	@cmd /c start make run
	@cd ../webapps && cmd /c start make run
	
proto:
	@echo "Generating protobuf code..."
	@protoc -I../protos \
		--go_out=../protos --go_opt=paths=source_relative \
		--go-grpc_out=../protos --go-grpc_opt=paths=source_relative \
		--grpc-gateway_out=../protos --grpc-gateway_opt=paths=source_relative \
		../protos/user/base.proto ../protos/user/user.proto
	@echo "Protobuf code generated successfully."